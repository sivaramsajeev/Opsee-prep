cat elapsed_time.py
import time
import datetime
t1 = datetime.datetime.now()
time.sleep(120)
t2 = datetime.datetime.now()
elapsedTime = t2 - t1

print('time elapsed is {}'.format(divmod(elapsedTime.total_seconds(), 60)))

